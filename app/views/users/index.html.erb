<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>User info</h3>
      <%= render 'users/info', user: @user %>

      <h3>New book</h3>
      <%= render 'books/form', book: @book %>

    </div>
    <div class="col-md-8">
      <h3>Users</h3>
      <table>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>