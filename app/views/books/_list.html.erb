<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% books.each do |book| %>
    <tr>
      <td>
      <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
      <% end %>
    </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
</table>