<h3>User info</h3>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
name <%= current_user.name %>
introduction <%= current_user.introduction %>

<%= link_to 'edit', edit_user_path(current_user.id) %>

<h3>New book</h3>
<%= form_with model: @book_new, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion %>
    <%= f.text_area :opinion %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h3>Books</h3>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.opinion %>
      </td>
    </tr>
  <% end %>
</table>
